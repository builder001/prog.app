<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %}</title>
        <script src='https://www.google.com/recaptcha/api.js' async defer></script>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/whiteoctoberpagerfanta/css/pagerfantaDefault.css') }}" type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('css/font-awesome-4.6.3.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="bg-light">
        <header>
            {% block header %}
            <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #c5e032 ">
                <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'menu.homepage_title'|trans }}</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% block container %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('about_us') }}">{{ 'menu.homepage_about'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('activities') }}">{{ 'menu.homepage_activity'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('publishing') }}">{{ 'menu.homepage_publish'|trans }}</a>
                        </li><li class="nav-item">
                            <a class="nav-link" href="{{ path('partners') }}">{{ 'menu.homepage_partner'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contacts') }}">{{ 'menu.homepage_contact'|trans }}</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-globe" aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-menu locales" aria-labelledby="navbarDropdown">
                                {% for locale in locales() %}
                                    <a{% if app.request.locale == locale.code %} aria-checked="true" class="dropdown-item" {% else %} aria-checked="false" class="dropdown-item" {% endif %} href="{{ path(app.request.get('_route', 'homepage'), app.request.get('_route_params', [])|merge({ _locale: locale.code })) }}">
                                        {{ locale.name | capitalize }}
                                    </a>
                                {% endfor %}
                            </div>
                        </li>
                        {% endblock %}
                    </ul>
                </div>
            </nav>
            {% endblock %}
        </header>
            <main role="main">
                {% block main %}{% endblock %}
                <div class="container">
                    {% block content %}{% endblock %}
                    <hr>
                </div>
            </main>

            <footer class="container">
                <p>
                    <b>Â© Progression 2014 - {{ "now"|date("Y") }}</b>
                </p>
            </footer>

        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.2.1.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/popper.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
